{
  "name": "meteor-bug",
  "private": true,
  "scripts": {
    "start": "meteor run --exclude-archs=web.browser.legacy",
    "update": "npm exec --yes concurrently@latest -- --prefix-colors green,yellow 'npm run update:meteor' 'npm run update:node'",
    "update:meteor": "meteor update --all-packages",
    "update:node": "npm exec --yes npm-check-updates@latest -- --upgrade --target=minor && npm update"
  },
  "dependencies": {
    "@babel/runtime": "^7.20.1",
    "meteor-node-stubs": "^1.2.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/meteor": "^1.4.87",
    "@types/mocha": "^8.2.3",
    "@types/react": "^17.0.52",
    "@types/react-dom": "^17.0.18",
    "typescript": "^4.8.4"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.tsx",
      "server": "server/main.ts"
    },
    "testModule": "tests/main.ts"
  }
}
