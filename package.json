{
  "name": "meteor-bug",
  "private": true,
  "scripts": {
    "start": "meteor run --exclude-archs=web.browser.legacy",
    "update": "NPM_CONFIG_YES=true npx concurrently@latest --prefix-colors auto --names meteor,node 'npm run update:meteor' 'npm run update:node'",
    "update:meteor": "meteor update --all-packages",
    "update:node": "NPM_CONFIG_YES=true npx npm-check-updates@latest --upgrade && npm update",
    "format": "prettier --cache --write . --ignore-path .gitignore",
    "check": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@babel/runtime": "^7.21.5",
    "meteor-node-stubs": "^1.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/meteor": "^2.9.2",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.tsx",
      "server": "server/main.ts"
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleAttributePerLine": true
  }
}
